#!/bin/bash

mkmanifest () {
    declare line
    while IFS= read -r line;do
      line=${line#./}
      [[ "$line" == . ]] && continue
      echo "$line"
    done <<<  $(find . ! -path '*/_*' -a -name "README.md" -printf "%h\n"| sort -d) > MANIFEST
}


render() {
declare dir="$1"
echo Building $dir
pandoc -s -o  "$dir/index.html" --quiet --css=rwx_css_template.css  --template=html5_template "./$dir/README.md"
}
  
mkmanifest

render .

while IFS= read -r dir; do
  render $dir
done < MANIFEST

